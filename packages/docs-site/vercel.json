{
  "version": 2,
  "functions": {
    "api/remastered-serverless.js": {
      "includeFiles": "+(+(dist|docs)/**/*|node_modules/shiki/**/*)"
    }
  },
  "rewrites": [
    {
      "source": "/assets/:file*",
      "destination": "dist/client/assets/:file*"
    },
    {
      "source": "/(.*)",
      "destination": "/api/remastered-serverless.js"
    }
  ]
}
