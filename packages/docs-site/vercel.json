{
  "version": 2,
  "functions": {
    "api/remastered-serverless.js": {
      "includeFiles": "+(dist|docs)/**/*"
    },
    "api/list-files.js": {
      "includeFiles": "+(dist|docs)/**/*"
    }
  },
  "rewrites": [
    {
      "source": "/__list_files__",
      "destination": "/api/list-files.js"
    },
    {
      "source": "/assets/:file*",
      "destination": "dist/client/assets/:file*"
    },
    {
      "source": "/(.*)",
      "destination": "/api/remastered-serverless.js"
    }
  ]
}
